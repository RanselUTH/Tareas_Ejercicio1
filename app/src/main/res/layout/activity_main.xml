<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_verde"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtnumero2"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:background="@drawable/borde"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Ingrese un numero..."
        android:inputType="textPersonName"
        android:numeric="integer"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textColorHint="#0E0E0E"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtnumero1"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:background="@drawable/borde"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Ingrese un numero..."
        android:inputType="textPersonName"
        android:numeric="integer"
        android:scrollbarSize="4dp"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textColorHint="#090909"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.399" />

    <Button
        android:id="@+id/butresta"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="#FBFBF8"
        android:text="Resta"
        android:textColor="#0B0B0B"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butsuma"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/butsuma"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="#FBFBFB"
        android:backgroundTintMode="src_atop"
        android:text="Suma"
        android:textColor="#0B0B0A"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:iconTint="#070707"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.673" />

    <Button
        android:id="@+id/butdivision"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="#FBFBFB"
        android:text="División "
        android:textColor="#0C0C0C"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butresta"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/butmulti"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="#FDFDFC"
        android:text="Multipliación "
        android:textColor="#050505"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butdivision"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="288dp"
        android:layout_height="148dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:srcCompat="@drawable/logoblancouth" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Operaciones Matematicas "
        android:textColor="#FBF9F9"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />

</androidx.constraintlayout.widget.ConstraintLayout>